# Redis Docker Environment Variables
# Variables de entorno para Redis Docker

# Redis Configuration
REDIS_PASSWORD=redis123
REDIS_PORT=6379
REDIS_DATABASES=16
REDIS_MAXMEMORY=256mb
REDIS_MAXMEMORY_POLICY=allkeys-lru

# RedisInsight Configuration
REDISINSIGHT_PORT=8001
REDISINSIGHT_USERNAME=default
REDISINSIGHT_PASSWORD=redis123

# Redis Performance Configuration
REDIS_TCP_KEEPALIVE=300
REDIS_TCP_BACKLOG=511
REDIS_TIMEOUT=0
REDIS_MAXMEMORY_SAMPLES=5

# Redis Logging Configuration
REDIS_LOG_LEVEL=notice
REDIS_LOGFILE=/var/log/redis/redis.log
REDIS_SYSLOG_ENABLED=false

# Redis Security Configuration
REDIS_PROTECTED_MODE=yes
REDIS_REQUIREPASS=redis123
REDIS_RENAME_COMMANDS=true

# Redis Persistence Configuration
REDIS_SAVE_900_1=true
REDIS_SAVE_300_10=true
REDIS_SAVE_60_10000=true
REDIS_STOP_WRITES_ON_BGSAVE_ERROR=yes
REDIS_RDBCOMPRESSION=yes
REDIS_RDBCHECKSUM=yes

# Redis Cluster Configuration
REDIS_CLUSTER_ENABLED=false
REDIS_CLUSTER_CONFIG_FILE=nodes.conf
REDIS_CLUSTER_NODE_TIMEOUT=5000

# Redis Sentinel Configuration
REDIS_SENTINEL_DENY_SCRIPTS_RECONFIG=yes

# Monitoring Configuration
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_ENABLED=true
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin123

# Redis Exporter
REDIS_EXPORTER_PORT=9121
REDIS_REPLICA_EXPORTER_PORT=9122

# Clustering Configuration
CLUSTERING_ENABLED=false
REDIS_REPLICA_PORT=6380
REDIS_REPLICATION_USER=replicator
REDIS_REPLICATION_PASSWORD=replicator123

# Clustering Configuration
CLUSTERING_ENABLED=false
CLUSTER_MODE=standalone
CLUSTER_NODES=1
