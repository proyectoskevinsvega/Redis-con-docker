# Flask Redis Example Environment Variables
# Variables de entorno para la aplicaci√≥n Flask con Redis

# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=development
FLASK_DEBUG=true
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# Redis Configuration
REDIS_HOST=redis-db
REDIS_PORT=6379
REDIS_PASSWORD=redis123
REDIS_DB=0

# Redis Connection Pool
REDIS_MAX_CONNECTIONS=10
REDIS_RETRY_ON_TIMEOUT=true
REDIS_SOCKET_TIMEOUT=5
REDIS_SOCKET_CONNECT_TIMEOUT=5

# Application Configuration
APP_SECRET_KEY=your-secret-key-here
APP_NAME=Redis Docker Example
APP_VERSION=1.0.0

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Cache Configuration
CACHE_TYPE=redis
CACHE_REDIS_HOST=redis-db
CACHE_REDIS_PORT=6379
CACHE_REDIS_PASSWORD=redis123
CACHE_REDIS_DB=1

# Session Configuration
SESSION_TYPE=redis
SESSION_REDIS_HOST=redis-db
SESSION_REDIS_PORT=6379
SESSION_REDIS_PASSWORD=redis123
SESSION_REDIS_DB=2
SESSION_PERMANENT=false
SESSION_USE_SIGNER=true
SESSION_KEY_PREFIX=session:

# Rate Limiting
RATELIMIT_STORAGE_URL=redis://redis-db:6379/3
RATELIMIT_DEFAULT=100 per hour

# Background Tasks
CELERY_BROKER_URL=redis://redis-db:6379/4
CELERY_RESULT_BACKEND=redis://redis-db:6379/4

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_ENABLED=true
GRAFANA_PORT=3000
